{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VizUpdateMessage",
  "description": "Aggregated visualization data for dashboards or external systems",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "status": { "type": "string" },
    "data_summary": {
      "type": "object",
      "properties": {
        "fdm_points": { "type": "integer" },
        "pinn_points": { "type": "integer" },
        "inversion_points": { "type": "integer" }
      }
    },
    "parameters": {
      "type": "object",
      "properties": {
        "lambda_f": { "type": ["number", "null"] },
        "C_f": { "type": ["number", "null"] },
        "eta": { "type": ["number", "null"] },
        "b": { "type": ["number", "null"] },
        "T_nabla": { "type": ["number", "null"] }
      }
    }
  },
  "required": ["timestamp", "status", "data_summary"]
}
